@page "/Employee"
@using BlazorAplicada2ProjectFinal.Data;
@inject EmployeeServices sevices
@inject NavigationManager Navigator 

<h3>Creation of Employees</h3>

<div class="row">
    <div class="col-md-8">
        <div class="form-group">
            <label for="Nombre">Nombres</label>
            <input id="Nombre" class="form-control" type="text" @bind-value="employees.Nombres" placeholder="Ezequiel" />
        </div>
        <div class="form-group">
            <label for="Apellidos">Apellidos</label>
            <input id="Apellidos" class="form-control" type="text" @bind-value="employees.Apellidos" placeholder="Huma Brito" />
        </div>
        <div class="form-group">
            <label for="Cedula">Cedula</label>
            <input id="Cedula" class="form-control" type="text" @bind-value="employees.Cedula" placeholder="402-1331211-1" />
        </div>
        <div class="form-group">
            <label for="Nacionalidad">Nacionalidad</label>
            <input id="Nacionalidad" type="text" class="form-control" @bind-value="employees.Nacionalidad" placeholder="Dominicana" />
        </div>
        <div class="form-group">
            <label for="Celular">Celular</label>
            <input id="Celular" type="tel" class="form-control" @bind-value="employees.Celular" placeholder="849-351-0312" />
        </div>
        <div class="form-group">
            <label for="Telefono">Telefono</label>
            <input id="Telefono" type="tel" @bind-value="employees.Telefono" class="form-control" placeholder="809-232-1222" />
        </div>
        <div class="form-group">
            <label for="Salario">Salario</label>
            <input id="Salario" @bind-value="employees.Salario" class="form-control" type="number" placeholder="1000" />
        </div>
        <div class="form-group">
            <label for="EstadoCivil">Estado Civil</label>
            <input id="EstadoCivil" @bind-value="employees.EstadoCivil" class="form-control" type="text"/>
        </div>
        <div class="form-group">
            <label for="FechaNacimiento">Fecha de Nacimiento</label>
            <input type="date" @bind-value="employees.FechaNacimiento" class="form-control"/>
            \
        </div>
        <div class="form-group">
            <label for="FechaCreacion">Fecha de Creacion</label>
            <input type="date" class="form-control" @bind-value="employees.FechaCreacion" placeholder="12-12-2012" />
        </div>
    </div>
</div>

    <div class="form-group">
        <input type="submit" value="Crear" @onclick="Crear" class="btn btn-primary" />
    </div>





@code {
    Employees employees = new Employees();

    private void Crear()
    {
        sevices.Crear(employees);
        Navigator.NavigateTo("Index");
    }

}
